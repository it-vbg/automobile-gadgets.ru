<layout version="0.1.0">
<invoicebank_invoice_fail>
		<reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference> 
    <reference name="content">
            <block type="invoicebank/fail" name="invoicebank.fail" template="invoicebank/fail.phtml"/>
    </reference>
</invoicebank_invoice_fail>
<invoicebank_invoice_ready>
		<reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference> 
    <reference name="content">
            <block type="invoicebank/fail" name="invoicebank.ready" template="invoicebank/ready.phtml"/>
    </reference>
</invoicebank_invoice_ready>
<checkout_onepage_success>
	<reference name="content">
		<block type="invoicebank/link" name="invoicebank.link" as="invoicebank_link"/>
	</reference>
</checkout_onepage_success>
</layout>
